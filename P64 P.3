#include <stdio.h>
#include <stdlib.h>
#include <math.h>

void
main(void)
{
  int a, b, c;
	int tri;
	int compare(int, int, int);
	int judge(int, int, int);
	
	printf("insert 3 side of triangle\n");
	scanf("%d %d %d", &a, &b, &c);
	
	// 答案中先对三边进行了排序，这样可以降低代码量，值得借鉴
	
	if (!judge(a, b, c))
	{
		printf("Error Tri\n");
	}
	else
	{
		tri = compare(a, b, c);
		switch (tri)
		{
		case 1:		// 注意：这里不能用'1'，因为编译器会识别为字符1
			printf("Etri\n");	//equilateral triangle
			break;
		case 2:
			printf("Itri\n"); //isosceles triangle
			break;
		case 3:
			printf("Ntri\n"); //normal triangle
			break;
		default:
			printf("Error\n");
			break;
		}
	}
}

int
compare(int x, int y, int z)
{
	if (x == y)
	{
		if (y == z)
		{
			return 1;
		}
		else if (y != z)
		{
			return 2;
		}
	}
	if (x != y)
	{
		if (x != z && y != z)
		{
			return 3;
		}
		else
			return 2;
	}
}

int
judge(int x, int y, int z)
{
	if ( (x + y) <= z || (x + z) <= y || (z + y) <= x )
	{
		return 0;
	}
	
	return 1;
}
